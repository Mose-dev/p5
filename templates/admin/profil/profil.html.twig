{% extends 'base.html.twig' %}

{% block title %}Profil de {{ app.user.firstname}} {% endblock %}

{% block body %}
    <div class="mt-5">
        {% for message in app.flashes('success') %}
            <div class="alert alert-success text-center" role="alert">{{ message }}</div>
        {% endfor %}
    </div>
    <!--Jumbotron-->
    <div id="margin-t1" class="container  text-center">
        <div class="row">
            <div class="col mt-4">
                <div class="jumbotron bg-transparent mt-5">
                    <h1 class="text-center text-light">Profil de {{ app.user.firstname}} {{ app.user.name}}</h1>
                </div>
            </div>
        </div>
    </div>
    <!--Début de la partie contenu -->
    <div class="container text-center mt-5">
        <div class="row justify-content-center">
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card shadow h-100 py-2">
                    <div class="card-body">
                        <div class="col-auto">
                            <i class="far fa-address-card fa-3x text-success"></i>
                        </div>
                        <div class="font-weight-bold text-uppercase">
                            <a class="text-success" href="{{ path('admin_edit_profil', {id: app.user.id} )}}">Modifier votre profil</a>
                        </div>
                    </div>
                </div>
            </div>         
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card shadow h-100 py-2">
                    <div class="card-body">
                        <div class="col-auto">
                            <i class="fas fa-key fa-3x text-success"></i>
                        </div>   
                        <div class=" font-weight-bold text-uppercase">
                                <a class="text-success" href="{{ path('admin_password_reset', {id: app.user.id} )}}">Modifier le mot de Passe</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card shadow h-100 py-2">
                    <div class="card-body">
                        <div class="col-auto">
                            <i class="fas fa-book-reader fa-3x text-success"></i>
                        </div>   
                            <div class="font-weight-bold text-uppercase">
                                <a class="text-success" href="{{ path('admin_annonces_new') }}">Créer une annonce</a>
                            </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 col-md-6 mb-4">
                <div class="card shadow h-100 py-2">
                    <div class="card-body">
                        <div class="col-auto">
                            <i class="fas fa-bed fa-2x text-danger"></i>
                        </div>
                        <div class="font-weight-bold text-uppercase">
                            <a class="text-danger"href="{{ path('app_logout') }}">Deconnexion</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center"><a class="btn btn-primary mb-2 border-light" href="{{ path('admin_home') }}">Administration</a><div>
    <div class="container ">
        <h1 class="text-center mt-5 text-light">Annonces de {{ app.user.firstname}} {{ app.user.name}} ({{ app.user.annonces|length }})</h1>
        <div class="card mx-auto bg-transparent border-0">
            <div class="card-body mx-auto">
                {% for annonce in app.user.annonces %}
                    <div class="row mt-4 mx-auto">
                        <div class="col-4">
                        Titre :
                        </div>
                    <div class="col-8">
                        {{ annonce.title}}
                        <a href="{{ path('admin_annonces_edit_profil',{'id': annonce.id} )}}">Modifier</a>
                    </div>  
            </div>   
                {% endfor %} 
        </div>
    </div>
{% endblock %}
    
