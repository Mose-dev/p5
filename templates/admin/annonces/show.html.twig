{% extends 'base.html.twig' %}

{% block title %}Voir l'annonce{% endblock %}

{% block body %}
    <div id="margin-t1" class="container text-center">
        <h1 class="text-light">Voir l'annonce</h1>

        <table class="table text-white">
            <tbody>
                <tr>
                    <th>Numéro</th>
                    <td>{{ annonce.id }}</td>
                </tr>
                <tr>
                    <th>Titre</th>
                    <td>{{ annonce.title }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ annonce.slug }}</td>
                </tr>
                <tr>
                    <th>Contenu</th>
                    <td>{{ annonce.content|striptags|raw  }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ annonce.createdAt ? annonce.createdAt|date('d-m-Y H:i:s') : '' }}</td>
                </tr>
                </tbody>
        </table>

        <div><a class="btn btn-success mt-2 border-light" href="{{ path('admin_annonces_edit', {'id': annonce.id}) }}">Modifier</a></div>
        <div><a class="btn btn-primary mt-2 border-light" href="{{ path('admin_annonces_index') }}">Retour à l'index</a></div>
        {{ include('admin/annonces/delete.html.twig') }}
    </div>    
{% endblock %}
