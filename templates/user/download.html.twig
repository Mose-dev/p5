{% extends "user/basePdf.html.twig" %}

{% block title %}Liste des données de {{ app.user.firstname }} {{ app.user.name }}{% endblock %}

{% block body %}
   <h1>Liste des données de {{ app.user.firstname }} {{ app.user.name }}</h1>
   <h2>Vos données</h2>

   <table>
        <thead border=1>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">Email</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{ app.user.name }}</td>
                <td>{{ app.user.firstname }}</td>
                <td>{{ app.user.email }}</td>
            </tr>
        </tbody>
    </table>
    <h2>Vos annonces</h2>
    <table>
        <thead border=1>
            <tr>
                <th scope="col">Titre</th>
                <th scope="col">Valeur</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in app.user.annonces %}
            <tr>
                <td>{{ annonce.title }}</td>
                <td>{{ annonce.content|raw }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}