
{% extends 'base.html.twig' %}

{% block title %}annonces{% endblock %}

{% block body %}
    <div id="margin-t" class="container">
        <h1 class="text-light text-center mb-5">Annonces</h1>
        {% for annonce in annonces %}
            <div class="card mb-3 w-75 bg-transparent border-0" >
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="{{ asset('./uploads/images/annonces/' ~ annonce.images[0].name) }}" alt="{{ annonce.title }}" style="max-width: 290px;">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body mx-3">
                            <h5 class="card-title">Card title</h5>
                            <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
                            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                        </div>
                    </div>
                </div>
            </div>    
        {% endfor %}
        
    </div>
{% endblock %}
