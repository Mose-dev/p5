{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div id="margin-t" class="container text-center">
       <div class="card w-75 mx-auto bg-transparent border-0 mx-auto">
            <div class="card-body mx-auto">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes déjà connecté avec {{ app.user.username }}  <a class="btn btn-danger" href="{{ path('app_logout') }}">Deconnexion</a>
                        </div>
                    {% endif %}

                    <h1 class="h3 mb-3 fs-1 text-light">Connexion</h1>
                    <label for="inputEmail">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                    <label for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}">

                    <button class="btn btn-primary mt-3 border-light" type="submit">Valider</button>
                </form>
            </div>
        </div>
    </div>



{% endblock %}
