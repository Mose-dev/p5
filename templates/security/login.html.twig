<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Connexion{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
        <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">
    </head>
    <body>
    {% include 'base/nav.html.twig' %}
    {% block body %}
        <div id="margin-t" class="container text-center">
            {% if app.user %}
                <div class="mb-3 text-light fs-3">
                    Vous êtes déjà connecté avec {{ app.user.username }}  
                </div>
            {% else %}
                <div class="card w-75 mx-auto bg-transparent border-0 mx-auto">
                    <div class="card-body mx-auto">
                        <form method="post">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <h1 class="h3 mb-3 fs-1 text-light">Connexion</h1>
                            <label for="inputEmail">Email</label>
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                            <label for="inputPassword">Password</label>
                            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                            <input type="hidden" name="_csrf_token"value="{{ csrf_token('authenticate') }}">
                            <button class="btn btn-primary mt-3 border-light" type="submit">Valider</button>
                            <div class="mt-3"><a href="{{ path('app_forgot_password_request')}}">Mot de passe oublié</a><div>
                        </form>
                    </div>
                </div>
            {% endif %}
        </div>
    {% endblock %}
    </body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-gtEjrD/SeCtmISkJkNUaaKMoLD0//ElJ19smozuHV6z3Iehds+3Ulb9Bn9Plx0x4" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/656b2e3df2.js" crossorigin="anonymous"></script>
</html>