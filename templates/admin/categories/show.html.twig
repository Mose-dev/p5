{% extends 'base.html.twig' %}

{% block title %}Voir les catégories{% endblock %}

{% block body %}
    <div id="margin-t1" class="container text-center">    
        <h1 class="text-light">Voir les catégories</h1>

        <table class="table text-white">
            <tbody>
                <tr>
                    <th>Numéro</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ category.name }}</td>
                </tr>
                <tr>
                    <th>Slug</th>
                    <td>{{ category.slug }}</td>
                </tr>
            </tbody>
        </table>
        
        <div><a class="btn btn-success mt-2 border-light" href="{{ path('admin_categories_edit', {'id': category.id}) }}">Modifier</a></div>
        <div><a class="btn btn-primary mt-2 border-light" href="{{ path('admin_categories_index') }}">Retour à l'index</a></div>
    </div>
{% endblock %}
