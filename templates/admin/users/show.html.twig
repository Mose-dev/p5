{% extends 'base.html.twig' %}

{% block title %}Voir l'adhérent{% endblock %}

{% block body %}
    <div id="margin-t1" class="container text-center">
        <h1 class="text-light">Voir l'adhérent</h1>

        <table class="table text-white">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Rôles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Mot de passe</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ user.name }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ user.firstname }}</td>
                </tr>
            </tbody>
        </table>
        <div><a class="btn btn-success  mt-2 border-light" href="{{ path('admin_user_edit', {id: user.id}) }}">Modifier</a></div>
        <div><a class="btn btn-primary mt-2 border-light" href="{{ path('admin_user_index') }}">Retour à l'index</a></div>
        {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
